                <label for="postcode">Postcode<span style="color: red; margin:0">*</span></label>
                <ui:inputText value="{!v.postcodevalue}" aura:id="postcode" maxlength="7"
                              placeholder="{!v.postcodeLabel}" updateOn="keyup" keyup="{!c.addSpaceAfter4NumberForPostcode}" 
                              class="input sfdc_usernameinput sfdc"/>
            </div>
        
        	<div id="sfdc_cityname_container" class="sfdc">
