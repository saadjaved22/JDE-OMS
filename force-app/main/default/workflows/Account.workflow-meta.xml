    <rules>
        <fullName>Populate Email Opt In Status Field - Confirmed</fullName>
        <actions>
            <name>Update_Account_Opt_in_Status_Confirmed</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Populate Person Account Email Opt In Status Field - Confirmed</description>
        <formula>AND($Setup.WorkflowSettings__c.PersonAccountWorkflow__c,(  OR(  AND(Opt_in_Confirmation_Date__c &gt; Opt_in_Request_Date__c , Opt_in_Confirmation_Date__c &gt;  Opt_out_Request_Date__c ),  AND(NOT(ISBLANK(Opt_in_Confirmation_Date__c)), ISBLANK(Opt_in_Request_Date__c), ISBLANK(Opt_out_Request_Date__c)),  AND(Opt_in_Confirmation_Date__c &gt; Opt_in_Request_Date__c, ISBLANK(Opt_out_Request_Date__c)),  AND(Opt_in_Confirmation_Date__c &gt; Opt_out_Request_Date__c, ISBLANK(Opt_in_Request_Date__c)),  AND(Opt_in_Confirmation_Date__c = Opt_in_Request_Date__c, OR(Opt_in_Confirmation_Date__c &gt;= Opt_out_Request_Date__c, ISBLANK(Opt_out_Request_Date__c)))  ) ) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Populate Email Opt In Status Field - Opt-out</fullName>
        <actions>
            <name>Update_Account_Opt_in_Status_Opt_out</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <description>Populate Person Account Email Opt In Status Field - Opt-out</description>
        <formula>AND( $Setup.WorkflowSettings__c.PersonAccountWorkflow__c, (  OR(  AND(Opt_out_Request_Date__c &gt; Opt_in_Request_Date__c , Opt_out_Request_Date__c  &gt; Opt_in_Confirmation_Date__c ),  AND(NOT(ISBLANK(Opt_out_Request_Date__c)), ISBLANK(Opt_in_Request_Date__c ), ISBLANK(Opt_in_Confirmation_Date__c )),  AND(Opt_out_Request_Date__c &gt; Opt_in_Request_Date__c, ISBLANK(Opt_in_Confirmation_Date__c)),  AND(Opt_out_Request_Date__c &gt; Opt_in_Confirmation_Date__c, ISBLANK(Opt_in_Request_Date__c)),  AND(Opt_out_Request_Date__c = Opt_in_Confirmation_Date__c,  OR(Opt_out_Request_Date__c &gt;= Opt_in_Request_Date__c,ISBLANK(Opt_in_Request_Date__c))),  AND(Opt_out_Request_Date__c = Opt_in_Request_Date__c,  OR(Opt_out_Request_Date__c &gt;= Opt_in_Confirmation_Date__c, ISBLANK(Opt_in_Confirmation_Date__c)))   ) ) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
