@IsTest
public class HTTPPostFormBuilderTest {

    @IsTest
    private static void testBuilder() {
        blob fileABlob = EncodingUtil.base64Decode('');
        blob fileBBlob = EncodingUtil.base64Decode('');
        blob fileCBlob = EncodingUtil.base64Decode('');
        string formA64 = '';
        string formB64 = '';
        string formC64 = '';

        Test.startTest();

        string contentType = HTTPPostFormBuilder.GetContentType();

        formA64 += HTTPPostFormBuilder.WriteBoundary();
        formA64 += HTTPPostFormBuilder.WriteBodyParameter('key', 'value');
        formA64 += HTTPPostFormBuilder.WriteBoundary();

        HTTPPostFormBuilder.WriteFileResult resultA = HTTPPostFormBuilder.WriteFile('key', 'value', 'image/jpeg', fileABlob);

        formA64 += resultA.Content;
        formA64 += HTTPPostFormBuilder.WriteBoundary(resultA.EndingType);

        formB64 += HTTPPostFormBuilder.WriteBoundary();
        formB64 += HTTPPostFormBuilder.WriteBodyParameter('key', 'value');
        formB64 += HTTPPostFormBuilder.WriteBoundary();

        HTTPPostFormBuilder.WriteFileResult resultB = HTTPPostFormBuilder.WriteFile('key', 'value', 'image/jpeg', fileBBlob);

        formB64 += resultB.Content;
        formB64 += HTTPPostFormBuilder.WriteBoundary(resultB.EndingType);

        formC64 += HTTPPostFormBuilder.WriteBoundary();
        formC64 += HTTPPostFormBuilder.WriteBodyParameter('key', 'value');
        formC64 += HTTPPostFormBuilder.WriteBoundary();

        HTTPPostFormBuilder.WriteFileResult resultC = HTTPPostFormBuilder.WriteFile('key', 'value', 'image/jpeg', fileCBlob);

        formC64 += resultC.Content;
        formC64 += HTTPPostFormBuilder.WriteBoundary(resultC.EndingType);

        Test.stopTest();

        System.assert(contentType == 'multipart/form-data; charset="UTF-8"; boundary="1ff13444ed8140c7a32fc4e6451aa76d"');
        System.assert(formA64 == '');
        System.assert(formB64 == '');
        System.assert(formC64 == '');
    }

}